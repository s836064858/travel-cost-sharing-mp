/* pages/bill-create/bill-create.wxss */
.page-header {
  margin: 20rpx 30rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #444;
}
.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-field {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.picker-with-avatar {
  display: flex;
  align-items: center;
}

.radio-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 32rpx;
}

.members-section {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
}

.member-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 20rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  font-size: 28rpx;
  color: #666;
}

.member-checkbox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-checkbox:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.checkbox-item {
  display: flex;
  align-items: center;
  flex: 1;
}

.member-name {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.share-amount {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #07c160;
}

.custom-amount {
  width: 150rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 10rpx;
  font-size: 28rpx;
  text-align: right;
}

.preview-section {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.preview-amount {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.preview-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
  font-weight: bold;
}

.preview-diff {
  font-size: 24rpx;
}

.preview-diff.zero {
  color: #07c160;
}

.preview-diff.non-zero {
  color: #ff4d4f;
}

.btn-primary:disabled {
  background-color: #ccc;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}

.btn-danger {
  background-color: #ff4d4f;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 28rpx;
  font-size: 30rpx;
  flex: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background-color: #f7f7f7;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 16rpx 28rpx;
  font-size: 30rpx;
  flex: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 28rpx;
  font-size: 30rpx;
  flex: 1;
}
/* 页面容器 与首页一致 */
.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

/* 顶部背景 与首页一致 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #07c160 0%, #009688 100%);
  z-index: 0;
}

/* 内容包装 与首页一致 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 30rpx;
}

/* 卡片阴影 与首页统一 */
.card-shadow {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

