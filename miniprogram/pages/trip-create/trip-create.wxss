/* pages/trip-create/trip-create.wxss */

/* 页面容器 与首页一致 */
.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

/* 顶部背景 与首页一致 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: linear-gradient(135deg, #07c160 0%, #009688 100%);
  z-index: 0;
}

/* 内容包装 与首页一致 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 30rpx;
}

/* 标题区域 与首页统一 */
.hero {
  color: #fff;
  margin-bottom: 30rpx;
  padding-top: 20rpx;
}

.brand {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.95;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 卡片阴影 与首页统一 */
.card-shadow {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card-shadow:active {
  transform: scale(0.98);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 与首页的 section-title 对齐 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 二维码区域 */
.qr-section {
  padding: 40rpx;
  text-align: center;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin: 0 auto 30rpx;
  background: #fafafa;
}

.qr-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn-secondary {
  background: #f7f7f7;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn-secondary:active {
  background: #e8e8e8;
}

/* 加入模式样式复用卡片与空状态，仅补充布局 */

/* 成员列表 */
.members-list {
  padding: 20rpx 30rpx 30rpx;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e6f7ff;
  color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.member-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.member-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.member-status {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 0;
}

.member-actions {
  margin-left: auto;
  display: flex;
  align-items: center;
}

.btn-remove {
  background: #f5222d;
  color: #fff;
  border: none;
  border-radius: 36rpx;
  padding: 16rpx 28rpx;
  font-size: 26rpx;
  width: auto;
  min-width: 160rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-remove:active {
  background: #cf1322;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
}

/* 操作区域 */
.action-section {
  padding: 20rpx 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #6ee7b7 0%, #3b82f6 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
  opacity: 1;
}

