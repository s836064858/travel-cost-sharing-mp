/* pages/trip-create/trip-create.wxss */

/* 页面容器 */
.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标题区域 - 与首页风格一致 */
.hero {
  background: linear-gradient(135deg, #6ee7b7 0%, #3b82f6 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.brand {
  font-size: 48rpx;
  font-weight: 700;
}

.subtitle {
  margin-top: 8rpx;
  opacity: 0.9;
  font-size: 28rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 二维码区域 */
.qr-section {
  padding: 40rpx;
  text-align: center;
}

.qr-image {
  width: 400rpx;
  height: 400rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  margin: 0 auto 30rpx;
  background: #fafafa;
}

.qr-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.btn-secondary {
  background: #f7f7f7;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn-secondary:active {
  background: #e8e8e8;
}

/* 加入模式样式复用卡片与空状态，仅补充布局 */

/* 成员列表 */
.members-list {
  padding: 20rpx 30rpx 30rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e6f7ff;
  color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.member-status {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.member-actions {
  margin-left: 20rpx;
}

.btn-remove {
  background: #ff4d4f;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

.btn-remove:active {
  background: #d9363e;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
}

/* 操作区域 */
.action-section {
  padding: 20rpx 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #6ee7b7 0%, #3b82f6 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-primary:disabled {
  background: #ccc;
  color: #999;
  opacity: 1;
}

/* 弹窗样式 */
