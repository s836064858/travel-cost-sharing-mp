/* 输入框样式 */
.text-input {
  width: 100%;
  padding: 20rpx 0rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
}

.text-input:disabled {
  background: #f5f5f5;
  color: #999;
}
