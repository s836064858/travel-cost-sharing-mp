/* pages/trip-detail/trip-detail.wxss */
.trip-info {
  margin-bottom: 20rpx;
}

.trip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.trip-name {
  font-size: 40rpx;
  font-weight: bold;
  flex: 1;
}

.trip-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.trip-status.created {
  background-color: #ff9500;
}

.trip-status.ongoing {
  background-color: #07c160;
}

.trip-status.closed {
  background-color: #999;
}

.actions-section {
  margin-bottom: 20rpx;
}

.action-grid {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.action-item {
  text-align: center;
  padding: 20rpx;
  flex: 0 0 20%;
}

.action-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.members-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.member-agent {
  font-size: 24rpx;
  color: #999;
}

.bills-section {
  margin-bottom: 20rpx;
}

.bills-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.bill-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.bill-item:last-child {
  border-bottom: none;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 16rpx;
}

.bill-category {
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 600;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
}

.bill-category.food {
  background-color: #ff9500;
}

.bill-category.transport {
  background-color: #007aff;
}

.bill-category.lodging {
  background-color: #5856d6;
}

.bill-category.ticket {
  background-color: #ff2d55;
}

.bill-category.other {
  background-color: #8e8e93;
}

.bill-amount {
  font-size: 34rpx;
  font-weight: 700;
  color: #07c160;
  letter-spacing: 1rpx;
}

.bill-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.payer {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.payer-name {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 1rpx;
}

.bill-date {
  color: #888;
}

.avatars-list {
  display: flex;
  flex-wrap: wrap;
}

.avatar-small {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.avatar-small image {
  width: 100%;
  height: 100%;
}

.text-avatar-small {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #666;
}

.avatars-list.stacked {
  position: relative;
}

.avatars-list.stacked .avatar-small {
  margin-right: 0;
  margin-left: -12rpx;
}

.avatars-list.stacked .avatar-small:first-child {
  margin-left: 0;
}

.bill-participants {
  margin-top: 10rpx;
}

.bill-participants-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-bills {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.member-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
  margin-right: 20rpx;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}
.avatar-small.payer {
  border-color: #07c160;
}

.avatar-badge {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  background: #07c160;
  color: #fff;
  border-radius: 50%;
  font-size: 18rpx;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}
