/* pages/settlement-view/settlement-view.wxss */
.settlement-section {
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.settlement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.settlement-item:last-child {
  border-bottom: none;
}

.settlement-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.settlement-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}

.settlement-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-name {
  margin-left: 15rpx;
  font-size: 26rpx;
}

.member-name.disabled {
  color: #999;
}

/* Avatars and names in settlement list */
.party {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}