/* pages/settlement-view/settlement-view.wxss */
.settlement-section {
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.section-subtitle {
  font-size: 24rpx;
  color: #888;
  margin-right: 12rpx;
}

.finalized-tag {
  font-size: 24rpx;
  color: #fff;
  background: #07c160;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.settlement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.settlement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx dashed #e6e6e6;
}

.settlement-item:last-child {
  border-bottom: none;
}

.settlement-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.amount-chip {
  margin-left: auto;
  font-size: 28rpx;
  color: #07c160;
  font-weight: 700;
  background: rgba(7, 193, 96, 0.08);
  border: 1rpx solid rgba(7, 193, 96, 0.5);
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.settlement-actions {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-name {
  margin-left: 15rpx;
  font-size: 26rpx;
}

.member-name.disabled {
  color: #999;
}

/* Avatars and names in settlement list */
.party {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.member-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.member-avatar image {
  width: 100%;
  height: 100%;
}

.text-avatar {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.arrow-wrap {
  padding: 0 8rpx;
}

.member-avatar.payer {
  border-color: #07c160;
}

.member-avatar.receiver {
  border-color: #007aff;
}

.avatar-badge {
  position: absolute;
  right: 2rpx;
  bottom: 2rpx;
  background: #333;
  color: #fff;
  border-radius: 50%;
  font-size: 18rpx;
  width: 26rpx;
  height: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #fff;
  z-index: 2;
}
