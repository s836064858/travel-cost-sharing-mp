/* pages/profile/profile.wxss */

.page-container {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.avatar-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.avatar-placeholder {
  border: 2rpx dashed #ddd;
}

.input-field {
  /* width: 100%; */
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.actions {
  display: flex;
  justify-content: flex-end;
}

.btn-primary {
  background: #07c160;
  color: #fff;
  border: none;
  padding: 20rpx 32rpx;
  border-radius: 8rpx;
}

.btn-secondary {
  background: #f0f0f0;
  color: #333;
  border: none;
  padding: 20rpx 32rpx;
  border-radius: 8rpx;
}
