/* pages/history/history.wxss */
/* 全局样式重置 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 顶部背景 */
.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 240rpx;
  background: linear-gradient(135deg, #07c160 0%, #009688 100%);
  z-index: 0;
}

/* 主要内容包装器 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 20rpx;
  padding-top: 40rpx;
}

/* 标签页容器 */
.tabs {
  display: flex;
  background: white;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 卡片阴影效果 */
.card-shadow {
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card-shadow:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 标签样式 */
.tab {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
  background-color: rgba(7, 193, 96, 0.08);
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 6rpx;
  background: linear-gradient(90deg, #07c160 0%, #009688 100%);
  border-radius: 3rpx;
}

/* 旅行列表 */
.trip-list {
  width: 100%;
}

/* 旅行项 */
.trip-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: white;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.trip-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 旅行头部 */
.trip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.trip-name {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

/* 状态标签 */
.trip-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.trip-status.created {
  background-color: #ff9500;
}

.trip-status.ongoing {
  background-color: #07c160;
}

.trip-status.closed {
  background-color: #999;
}

/* 成员头像容器 */
.member-avatars {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

/* 头像样式 */
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: 2rpx solid #f5f5f5;
}

/* 文本头像 */
.text-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #07c160 0%, #009688 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border: 2rpx solid #f5f5f5;
}

/* 旅行底部信息 */
.trip-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

/* 创建者标签 */
.owner-badge {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
  padding: 6rpx 16rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.empty-text {
  display: block;
  margin-bottom: 40rpx;
  color: #999;
  font-size: 32rpx;
}

/* 主要按钮 */
.btn-primary {
  background: linear-gradient(135deg, #07c160 0%, #009688 100%);
  color: white;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}
